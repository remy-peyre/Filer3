{% extends 'user_account.html.twig' %}

{% block content %}
<section class="upload">
    <div>
        {% for error in errors %}
            {{ error }}<br>
        {% endfor %}
    </div>
    <div>
    </div>
    <form method="POST" action="?action=upload" enctype="multipart/form-data">
        <p>UPLOAD :</p>
        <p>Pick a File<br>
            Click on Open and after Upload<br>
            Files .jpg / .jpeg / .png / .pdf / .txt / .mp3 / .mp4
            <br>
            <input type="file" name="uploaded_file">
            <input type="txt" name="initial_new_name">
            <input type="submit" name="upload_button" value="Upload">
        </p>
    </form>
</section>
{% endblock %}




