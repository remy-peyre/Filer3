{% extends 'userAccount.html.twig' %}

{% block content %}
<section class="your_files">
    Current Folder : {{currentPath}}
    <div>
        {% for error in errors %}
            {{ error }}<br>
        {% endfor %}
    </div>
    <div class="size_row_folder_show">
        {% for folder in allFolders %}

            <div class="colum_for_folder">
                <img class="size_folder_upload" src="web/image/folder.png" alt="{{file.filepath}}">
                {{ folder.foldername }}
                <form class="go_in_folder" method="POST" action="?action=switchCurrentFolder">
                    <input type="hidden" name="new_current_folder" value="{{folder.id}}">
                    <input type="submit" value="go to {{folder.foldername}}">
                </form>
            </div>


        {% endfor %}
    </div>
    <div class="size_row_img_show">
        {% for file in allFiles %}
            <div class="column_for_all_info">

                {% if file.type == "image" %}
                    <form class="form_delete" method="POST" action="?action=yourFiles">
                        <input class="none" type="text" name="id_file_to_delete" value="{{file.id}}">
                        <input type="submit" value="">
                    </form>
                    <img class="size_picture_upload" src="{{file.filepath}}" alt="{{file.filepath}}">

                    <div class="row_option_one_picture">
                        <a href="{{file.filepath}}" download="{{file.filepath}}">
                            <img class="logo_download" src="web/image/download.png" alt="download"/>
                        </a>
                        <div class="rename_button">Rename</div>
                    </div>

                    <form class="form_rename none" method="POST" action="?action=yourFiles">
                        <input class="none" type="text" name="id_file_to_rename" value="{{file.id}}">
                        <input type="text" name="new_name" value="" placeholder="NewName -> NewName.ext">
                        <input type="submit" value="Rename">
                    </form>

                {% endif %}

                {% if file.type == "application" %}
                    <form class="form_delete" method="POST" action="?action=yourFiles">
                        <input class="none" type="text" name="id_file_to_delete" value="{{file.id}}">
                        <input type="submit" value="">
                    </form>
                    <img class="size_picture_upload" src="web/image/doc.png" alt="{{file.filepath}}">

                    <div class="row_option_one_picture">
                        <a href="{{file.filepath}}" download="{{file.filepath}}">
                            <img class="logo_download" src="web/image/download.png" alt="download"/>
                        </a>
                        <div class="rename_button">Rename</div>
                    </div>

                    <form class="form_rename none" method="POST" action="?action=yourFiles">
                        <input class="none" type="text" name="id_file_to_rename" value="{{file.id}}">
                        <input type="text" name="new_name" value="" placeholder="NewName -> NewName.ext">
                        <input type="submit" value="Rename">
                    </form>

                {% endif %}

                {% if file.type == "audio" %}
                    <form class="form_delete" method="POST" action="?action=yourFiles">
                        <input class="none" type="text" name="id_file_to_delete" value="{{file.id}}">
                        <input type="submit" value="">
                    </form>
                    <audio class="size_picture_upload" src="{{file.filepath}}" controls></audio>

                    <div class="row_option_one_picture">
                        <div class="rename_button">Rename</div>
                    </div>

                    <form class="form_rename none" method="POST" action="?action=yourFiles">
                        <input class="none" type="text" name="id_file_to_rename" value="{{file.id}}">
                        <input type="text" name="new_name" value="" placeholder="NewName -> NewName.ext">
                        <input type="submit" value="Rename">
                    </form>

                {% endif %}

                {% if file.type == "video" %}
                    <!--<p>{{file.filepath}}</p>-->
                    <form class="form_delete" method="POST" action="?action=yourFiles">
                        <input class="none" type="text" name="id_file_to_delete" value="{{file.id}}">
                        <input type="submit" value="">
                    </form>
                    <video class="size_picture_upload" src="{{file.filepath}}" controls></video>

                    <div class="row_option_one_picture">
                        <div class="rename_button">Rename</div>
                    </div>

                    <form class="form_rename none" method="POST" action="?action=yourFiles">
                        <input class="none" type="text" name="id_file_to_rename" value="{{file.id}}">
                        <input type="text" name="new_name" value="" placeholder="NewName -> NewName.ext">
                        <input type="submit" value="Rename">
                    </form>

                {% endif %}
                <p> {{file.filename}}</p>
            </div>
        {% endfor %}
    </div>
</section>
{% endblock %}




