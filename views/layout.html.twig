<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>FILER 3</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0 minimum-scale=0.2">
        <link rel="icon" type="image/png" href="web/image/favicon.png">
        <link rel="stylesheet" href="web/style/style.css">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    </head>
    <body>
        <header>
            <nav>
                <div class="name_project">UPTOFILES</div>
                <div class="right_part_menu">
                    {% if user is defined %}
                        <div>
                            <a href="?action=user_account">
                                My Files
                            </a>
                        </div>
                        <div class="color_link_menu_right">
                            <a href="?action=logout">
                                Logout
                            </a>
                        </div>
                    {% else %}
                        <div class="color_link_menu_right">
                            <a href="?action=login">
                                Login
                            </a>
                        </div>
                        <div class="color_link_menu_right">
                            <a href="?action=register">
                                Register
                            </a>
                        </div>
                    {% endif %}
                </div>
            </nav>
        </header>

        <main>

            {% if error is defined and error is not empty %}
            <p class="error">Error : {{ error }}</p>
            {% endif %}


                {% block content %}{% endblock %}
        </main>
    </body>
</html>
